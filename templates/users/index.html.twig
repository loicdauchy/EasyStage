{% extends 'base.html.twig' %}

{% block title %}{{ app.user.prenom }} - infos{% endblock %}

{% block body %}
{% if not app.user %} 

    <h2>Vous n'avez pas les droits</h2>
    <a href=" {{ path('security_login') }} "><button class="btn btn-primary">Connexion</button></a>

{% elseif app.user.id == user.id %}
<div class="container centHeight">
    <div class="row centHeight justify-content-center align-items-center">
        <div class="col-12">
            <h2>Bonjour <span style="color:green;">{{ app.user.prenom }}  {{ app.user.nom }}</span></h2>
            {{ form_start(infoForm) }}
                <div class="form-group">
                    {{ form_row(infoForm.username, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.nom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.CP, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.Ville, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.tel, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.portfolio, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.github, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.pseudoGithub, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.CV, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.promo, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.avatar, {'attr': {'class': 'form-control upload', 'placeholder': 'Cliquez ici pour upload une image..'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.mobile, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.mobileZone, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.situation, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(infoForm.competences, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-warning">Mettre Ã  jour</button>
            {{ form_end(infoForm) }}
        </div>
    </div>
</div>
{% else %}
<div class="container cent">
    <div class="row cent justify-content-center align-items-center">
        <div class="col-12">
            <div class="alert alert-success" role="alert">
                Silence is golden
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
