{% extends 'base.html.twig' %}

{% block title %}Admin - Edite - Entreprise{% endblock %}

{% block body %}
{% if not app.user %} 

    <h2>Vous n'avez pas les droits</h2>
    <a href=" {{ path('security_login') }} "><button class="btn btn-primary">Connexion</button></a>

{% else %}
<div class="container cent">
    <div class="row cent justify-content-center align-items-center">
        <div class="col-12">
            <h2>Modifier l'entreprise: <span style="color:green;">{{ entreprise.nom }}</span></h2>
            {{ form_start(upEntrepriseForm) }}
                <div class="form-group">
                    {{ form_row(upEntrepriseForm.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(upEntrepriseForm.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(upEntrepriseForm.CP, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(upEntrepriseForm.ville, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(upEntrepriseForm.tel, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(upEntrepriseForm.mail, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(upEntrepriseForm.website, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-warning">Modifier</button>
            {{ form_end(upEntrepriseForm) }}
        </div>
    </div>
</div>
{% endif %}
{% endblock %}